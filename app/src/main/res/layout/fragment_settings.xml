<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="578dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cast_placeholder" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Nhóm 12"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnInfo0"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#292929"
            android:padding="10dp"
            android:text="Thông tin tài khoản"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#fff"
            android:textSize="20dp"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btnInfo1"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#292929"
            android:padding="10dp"
            android:text="Trợ giúp &amp; hỗ trợ"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#fff"
            android:textSize="20dp"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btnInfo2"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#292929"
            android:padding="10dp"
            android:text="Cài đặt &amp; Quyền riêng tư"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#fff"
            android:textSize="20dp"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/orange"
            android:text="Logout"
            android:textColor="#fff"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>