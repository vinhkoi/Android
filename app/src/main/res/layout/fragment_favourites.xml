<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.FavouritesFragment"
    android:background="@color/black">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/tab_view_pager_fav"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:stl_defaultTabBackground="?attr/selectableItemBackground"
        app:stl_defaultTabTextColor="@color/orange"
        app:stl_distributeEvenly="true"
        app:stl_dividerThickness="0dp"
        app:stl_drawDecorationAfterTab="true"
        app:stl_indicatorColor="@color/orange"
        app:stl_indicatorCornerRadius="2dp"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="1dp"
        app:stl_overlineThickness="0dp"
        app:stl_underlineThickness="0dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_fav"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>